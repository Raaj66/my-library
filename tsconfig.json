{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "src": ["./src"],
      // Your custom aliases here
      "helper/*": ["helper/*"],
      "scss/*": ["scss/*"],
      "components/*": ["components/*"],
      "hooks/*": ["hooks/*"],
      "constants/*": ["constants/*"],
      "stories/*": ["stories/*"]
    },

    "rootDir": "src",
    "declaration": true,
    "declarationDir": "build",
    //"module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "jsx": "react",
    //"jsx": "react-jsx",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": true
  },
  "include": ["src/**/*", "declarations.d.ts"],
  "exclude": [
    "node_modules",
    "build",
    "storybook-static"
  ]
}
